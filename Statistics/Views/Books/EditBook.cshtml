@model Statistics.Models.Book
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Add Book</h2>
<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="Id">
    
    <div class="form-group">
        <label asp-for="Name">Book Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    
    <div class="form-group">
        <label asp-for="Chapter1">Chapter One</label><br>
        <input asp-for="Chapter1" class="form-control">
    </div>
    
    <div class="form-group">
        <label asp-for="Chapter2">Chapter Two</label><br>
        <input asp-for="Chapter2" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label><br>
        <textarea asp-for="Description"></textarea>
    </div>
    
    <div class="text-left">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="ViewBooksList" class="btn btn-default">Cancell</a>
    </div>
</form>
